public class PyramidHillPattern {
	public static void main(String[] args) {

		int n=6;
		
		for(int i=1;i<=n;i++) {
			
			//Print spaces first
			for(int j=i;j<=n;j++) {
				System.out.print("  ");
			}
			//Print * in odd Number
			for(int j=2;j<=(2*i);j++) {
				System.out.print("* ");
			}
			
			//For next row
			   System.out.println();
		}
	}

}
